        <servlet-name>SendRequest</servlet-name>
        <servlet-class>SendRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Accept</servlet-name>
        <servlet-class>Accept</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Decline</servlet-name>
        <servlet-class>Decline</servlet-class>
